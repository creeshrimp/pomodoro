{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.vue",
            "options": {
                "semi": false,
                "singleQuote": true,
                "tabWidth": 4
            }
        },
        {
            "files": [
                "*.yml",
                "*.json"
            ],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}